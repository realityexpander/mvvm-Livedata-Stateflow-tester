<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="getItems"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062"
            app:srcCompat="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:text="Received 0 items"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <Button
            android:id="@+id/triggerStateFlowBtn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:onClick="onTriggerStateFlow"
            android:text="triggerStateFlow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:text="Received 0 items"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triggerStateFlowBtn" />

        <Button
            android:id="@+id/triggerLivePostDataBtn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:onClick="onTriggerLivePostData"
            android:text="triggerLivePostData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:text="Received 0 items"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triggerLivePostDataBtn" />

        <Button
            android:id="@+id/triggerLiveSetWithContextDataBtn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:onClick="onTriggerLiveSetWithContextData"
            android:text="triggerLiveSetWithContextData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:text="Received 0 items"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triggerLiveSetWithContextDataBtn" />

        <Button
            android:id="@+id/triggerLiveSetLaunchBtn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:onClick="onTriggerLiveSetLaunch"
            android:text="triggerLiveSetLaunch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_text"
            android:text="Received 0 items"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/triggerLiveSetLaunchBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>